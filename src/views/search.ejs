            .catch(error => console.error('Error:', error));
    })
    const supervisorByModality = () => {
        let modality = document.getElementById("modalityId").value;
        fetch('http://localhost:3000/api/supervisor/search?modality=' + modality, {
            method: "GET",
        })
            .then(res => res.json())
            .then(response => {
                console.log(response)
                window.history.pushState("object or string", "Title", '/search?modality=' + modality);
            })
            .catch(error => console.error('Error:', error));
    }
</script>

</html>
